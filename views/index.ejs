<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10">
        <form
          action="/create"
          method="post"
          class="text-white bg-red-1"
        >
          <input
            type="text"
            name="title"
            required 
            placeholder="Title"
            class="w-full px-5 py-2 bg-zinc-800 block mb-2"
          /> 
          <textarea
            placeholder="Write your task details"
            name="details"
            required
            class="w-full px-5 py-2 resize-none bg-zinc-800 block mb-3"
          ></textarea>
          <input
            type="submit"
            value="Create Task"
            class="block px-5 py-2 bg-blue-900 cursor-pointer"
          />
        </form>
      </div>
      <div class="tasks flex gap-3 flex-wrap p-10">
        <% if(files.length > 0 ){ %>
          <%files.forEach(function(elem){ %>
            <div class="task bg-zinc-800 px-3 py-4 rounded-md ">
              <h1 class="text-white tracking-tighter text-3xl "> <%= elem%> </h1>
              <a href="/details/<%=elem%>" class="text-blue-500 inline-block mt-3">Read more</a> 
            </div>
          <% }) %>
        <% }else{ %>
          <h3 class="text-zinc-700">No task created</h3>
       <% } %>
      </div>
    </div>
  </body>
</html>
